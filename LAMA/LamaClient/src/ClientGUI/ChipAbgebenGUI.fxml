<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="195.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.ChipAbgebenGUI">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="202.0" prefWidth="339.0" spacing="40.0">
         <children>
            <Label text="Welchen Chip möchten Sie abgeben?">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </padding>
            </Label>
            <HBox alignment="BASELINE_CENTER" prefHeight="100.0" prefWidth="272.0" spacing="120.0">
               <children>
                  <ImageView id="wChip" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#chooseWChip" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/ChipsWeiß.png" />
                     </image>
                  </ImageView>
                  <ImageView id="bChip" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#chooseBChip" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/chipSchwarz.png" />
                     </image>
                  </ImageView>
               </children>
               <VBox.margin>
                  <Insets left="30.0" right="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
